<!DOCTYPE html>
<html lang="en">
  <% include ./partials/header.ejs %>
  <body
    class="bg-gray-100 font-sans leading-normal tracking-normal flex flex-col min-h-screen"
  >
    <!-- Navigation -->
    <nav class="bg-white shadow-lg mb-8">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex-shrink-0 flex items-center">
            <a
              href="/"
              class="text-xl font-bold text-indigo-600 flex items-center"
            >
              <img
                src="/images/favicon.png"
                alt="DevCamper Logo"
                class="h-8 w-8 mr-2"
              />
              Dev<span class="text-gray-800">Camper</span></a
            >
          </div>
          <div class="flex items-center">
            <a
              href="/api/v1/bootcamps"
              class="text-gray-600 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium"
              >Back to Bootcamps</a
            >
          </div>
        </div>
      </div>
    </nav>

    <% if (!bootcamp) { %>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 flex-grow w-full">
      <h1>Bootcamp Not Found</h1>
    </div>
    <% } else { %>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 flex-grow w-full">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Main Content Column -->
        <div class="lg:col-span-2">
          <!-- Bootcamp Name -->
          <h2 class="text-4xl font-extrabold text-gray-900 mb-4">
            <%= bootcamp.name %>
          </h2>

          <!-- Description -->
          <div class="bg-white rounded-lg shadow-md p-6 mb-8">
            <h3 class="text-xl font-bold text-gray-800 mb-3">Description</h3>
            <p class="text-gray-600 leading-relaxed">
              <%= bootcamp.description %>
            </p>
          </div>

          <!-- Average Cost -->
          <div
            class="bg-white rounded-lg shadow-md p-6 mb-8 flex items-center justify-between"
          >
            <div>
              <h4 class="text-lg font-bold text-gray-800">Average Cost</h4>
              <p class="text-gray-500 text-sm">Per course</p>
            </div>
            <span class="text-3xl font-bold text-indigo-600">
              <% if (!bootcamp.averageCost) { %> $0 <% } else { %>
              $<%=bootcamp.averageCost%> <% } %>
            </span>
          </div>

          <!-- Courses -->
          <h3 class="text-2xl font-bold text-gray-900 mb-4">Courses</h3>
          <% if (bootcamp.courses.length === 0) { %>
          <p class="text-gray-600 text-sm">No courses found</p>
          <% } else { %>
          <div class="space-y-4">
            <% bootcamp.courses.forEach(course => { %>
            <div
              class="bg-white rounded-lg shadow-md p-6 border-l-4 border-indigo-500 hover:shadow-lg transition-shadow duration-200"
            >
              <div class="flex justify-between items-start">
                <div>
                  <h5 class="text-xl font-bold text-gray-800 mb-2">
                    <%= course.title %>
                  </h5>
                  <p class="text-gray-600 text-sm mb-4">
                    <%= course.description %>
                  </p>

                  <div
                    class="flex items-center space-x-4 text-sm text-gray-500"
                  >
                    <span class="flex items-center">
                      <i class="fas fa-clock mr-1"></i> <%= course.weeks %>
                      Weeks
                    </span>
                    <span class="flex items-center">
                      <i class="fas fa-signal mr-1"></i> <%= course.minimumSkill
                      %>
                    </span>
                  </div>
                </div>
                <div class="text-right">
                  <span class="block text-2xl font-bold text-gray-800"
                    ><%= course.tuition %></span
                  >
                </div>
                <% if (course.scholarshipAvailable === true) { %>
                <span
                  class="inline-block bg-green-100 text-green-800 text-xs px-2 py-1 rounded-full mt-1"
                >
                  Scholarship Available
                </span>
                <% } %>
              </div>
            </div>
            <% }) %>
          </div>
          <% } %>
        </div>

        <!-- Sidebar Column -->
        <div class="lg:col-span-1 space-y-8">
          <!-- Bootcamp Info Card -->
          <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <!-- Photo -->
            <div class="h-64 w-full relative">
              <% 
                let photoURL = bootcamp.photo;
                if (!photoURL.startsWith("http") || !photoURL.startsWith("https")) {
                  photoURL = "/uploads/" + photoURL;
                }
              %>
              <img
                src="<%= photoURL %>"
                alt="Devworks Bootcamp"
                class="w-full h-full object-cover"
              />
              <div class="absolute top-0 right-0 m-4">
                <span
                  class="bg-indigo-600 text-white px-3 py-1 rounded-full text-sm font-bold shadow-sm"
                >
                  <%= bootcamp.averageRating ? bootcamp.averageRating : 0 %> / 10
                </span>
              </div>
            </div>

            <div class="p-6">
              <!-- Rating Visual -->
              <div class="flex items-center justify-center mb-6">
                <div class="text-center">
                  <div class="text-5xl font-bold text-gray-900 mb-1"><%= bootcamp.averageRating ? bootcamp.averageRating : 0 %> / 10</div>
                  <div class="flex text-yellow-400 justify-center mb-2">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star-half-alt"></i>
                    <i class="far fa-star"></i>
                  </div>
                  <p class="text-gray-500 text-sm">Average Rating</p>
                </div>
              </div>

              <!-- Action Buttons -->
              <div class="space-y-3">
                <a
                  href="/api/v1/bootcamps/<%= bootcamp._id %>/reviews"
                  class="block w-full bg-gray-800 hover:bg-gray-900 text-white text-center font-bold py-3 px-4 rounded transition duration-200"
                >
                  <i class="fas fa-comments mr-2"></i> Read Reviews
                </a>
                <a
                  href="/api/v1/bootcamps/<%= bootcamp._id %>/reviews/create"
                  class="block w-full bg-indigo-600 hover:bg-indigo-700 text-white text-center font-bold py-3 px-4 rounded transition duration-200"
                >
                  <i class="fas fa-pencil-alt mr-2"></i> Write a Review
                </a>
                <a
                  href="<%= bootcamp.website %>"
                  target="_blank"
                  class="block w-full border border-gray-300 hover:bg-gray-50 text-gray-700 text-center font-bold py-3 px-4 rounded transition duration-200"
                >
                  <i class="fas fa-globe mr-2"></i> Visit Website
                </a>
              </div>
            </div>
          </div>

          <!-- Location Map Placeholder -->
          <div class="bg-white rounded-lg shadow-md p-6">
            <h4 class="text-lg font-bold text-gray-800 mb-4">Location</h4>
            <p class="text-gray-600 mb-4">
              <i class="fas fa-map-marker-alt text-indigo-500 mr-2"></i>
              <%= bootcamp.location.formattedAddress ?
              bootcamp.location.formattedAddress : 'no address' %>
            </p>
          </div>
        </div>
        <% } %>
      </div>
    </div>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white py-8 mt-12">
      <div class="max-w-7xl mx-auto px-4 text-center">
        <p>&copy; 2025 DevCamper. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>
